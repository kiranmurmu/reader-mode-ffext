{
    "compilerOptions": {
        "target": "ES2017",
        "module": "Preserve",
        "moduleResolution": "Bundler",
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "include": [
        "types/**/*.d.ts",
        "src/**/*.ts"
    ]
}