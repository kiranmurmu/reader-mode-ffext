{
    "compilerOptions": {
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "types/**/*.d.ts"
    ]
}